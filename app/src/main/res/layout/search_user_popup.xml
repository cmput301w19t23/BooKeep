<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/EmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="39dp"
        android:text="User Search"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/emailView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EmailTextView"
        android:layout_alignStart="@+id/EmailTextView"
        android:layout_alignLeft="@+id/EmailTextView"
        android:layout_marginStart="-45dp"
        android:layout_marginLeft="-45dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Email or Username"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/SearchButton"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/emailView"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/emailView"
        android:layout_toRightOf="@+id/emailView"
        android:cropToPadding="true"
        android:onClick="searchUser"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_search_black_24dp" />
</RelativeLayout>